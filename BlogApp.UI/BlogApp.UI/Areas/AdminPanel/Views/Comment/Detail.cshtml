@using BlogApp.DAL.Entity
@model Comment

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> Detail</h3>

<div class="row mt">
    <div class="col-md-12">
        <a href="/AdminPanel/Comment/Edit/@Model.CommentId" class="btn btn-success btn-sm" style="margin-bottom:8px;">Edit</a>
        <div class="content-panel" style="padding:15px;">
            <dl class="dl-horizontal">
                <dt>Text</dt>

                <dd>@Html.DisplayFor(model => model.Text)</dd>

                <dt>Status</dt>

                <dd>
                    @{
                        if (Model.Status == 2)
                        {
                            <span class="label label-success label-mini">Active</span>
                        }
                        else if (Model.Status == 1)
                        {
                            <span class="label label-info label-mini">Pending</span>
                        }
                        else
                        {
                            <span class="label label-danger label-mini">Passive</span>

                        }
                    }
                </dd>

                <dt>Inserted Date</dt>

                <dd>@Html.DisplayFor(model => model.InsertedDate)</dd>

            </dl>

            <div>
                <i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to List", "/List")
            </div>
        </div>
    </div>
</div>
