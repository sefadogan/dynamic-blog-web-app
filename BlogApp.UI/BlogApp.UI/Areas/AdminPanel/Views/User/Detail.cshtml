@using BlogApp.DAL.Entity
@model User

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> Detail</h3>

<div class="row mt">
    <div class="col-md-12">
        <a href="/AdminPanel/User/Edit/@Model.UserId" class="btn btn-success btn-sm" style="margin-bottom:8px;">Edit</a>
        <div class="content-panel" style="padding:15px;">
            <dl class="dl-horizontal">
                <dt>First Name</dt>
                <dd>@Html.DisplayFor(model => model.FirstName)</dd>

                <dt>Last Name</dt>
                <dd>@Html.DisplayFor(model => model.LastName)</dd>

                <dt>Email</dt>
                <dd>@Html.DisplayFor(model => model.Email)</dd>

                <dt>Username</dt>
                <dd>@Html.DisplayFor(model => model.Username)</dd>

                <dt>Password</dt>
                <dd>@Html.DisplayFor(model => model.Password)</dd>

                <dt>Status</dt>
                <dd>
                    @{
                        if (Model.IsActive)
                        {
                            <span class="label label-success label-mini">Active</span>
                        }
                        else
                        {
                            <span class="label label-danger label-mini">Passive</span>
                        }
                    }
                </dd>

                <dt>Inserted Date</dt>
                <dd>@Html.DisplayFor(model => model.InsertedDate)</dd>

                <dt>Published Posts</dt>
                <dd>@Model.Posts.Count()</dd>

            </dl>

            <div>
                <i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to List", "/List")
            </div>
        </div>
    </div>
</div>
