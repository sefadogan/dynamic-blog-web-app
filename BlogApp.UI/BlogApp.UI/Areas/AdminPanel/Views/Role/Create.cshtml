
@using BlogApp.DAL.Entity
@model Role

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<h3><i class="fa fa-angle-right"></i> Create</h3>
<hr />

<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel" style="padding:15px;">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label col-md-2">Name</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" name="Name" placeholder="Name" autocomplete="off" required />
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                </div>
            </div>
            }
            <div>
                <i class="fa fa-arrow-circle-left"></i> @Html.ActionLink("Back to List", "/List")
            </div>
        </div>
    </div>
</div>
